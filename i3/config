mode "$mode_move_float" {
      bindsym h exec i3-move-float.zsh "w"
      bindsym j exec i3-move-float.zsh "s"
      bindsym k exec i3-move-float.zsh "n"
      bindsym l exec i3-move-float.zsh "e"
      bindsym y exec i3-move-float.zsh "nw"
      bindsym u exec i3-move-float.zsh "ne"
      bindsym b exec i3-move-float.zsh "sw"     
      bindsym n exec i3-move-float.zsh "se"
      bindsym i exec i3-move-float.zsh "c"

      bindsym Escape mode "default"
      bindsym Return mode "default"
}
bindsym $mod+Shift+O mode "$mode_move_float"

